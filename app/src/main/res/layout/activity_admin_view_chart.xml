<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.admin.AdminViewChartActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/container_toolbar"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/stat_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thống kê nhân viên"
                        android:fontFamily="@font/regular_font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/spinner_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/employee_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription=""
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stat_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thống kê chấm công"
                        android:fontFamily="@font/regular_font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/spinner_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>

                </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/work_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription=""
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stat_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thống kê lương"
                        android:fontFamily="@font/regular_font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/spinner_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/salary_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription=""
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stat_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thống kê đơn nghỉ"
                        android:fontFamily="@font/regular_font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/spinner_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription=""
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>