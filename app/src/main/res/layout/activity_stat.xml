<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_gray"
    android:orientation="vertical"
    tools:context=".activities.employee.StatActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:elevation="5dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/light_round_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium_font"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Chọn tháng:"
            android:paddingVertical="15dp"
            android:paddingStart="15dp"/>
        <LinearLayout
            android:id="@+id/btn_select_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textSize="18sp"
                android:fontFamily="@font/regular_font"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_emp_calendar"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_data"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp">
                <TableRow
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/layout_work_time"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/round_shape"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng giờ làm"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/medium_font"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_business_time"
                            app:tint="@color/medium_purple"
                            />
                        <TextView
                            android:id="@+id/tv_work_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium_font"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/empty"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_overtime"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/round_shape"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng giờ tăng ca"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/medium_font"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_hourglass"
                            app:tint="@color/accept_line"
                            />
                        <TextView
                            android:id="@+id/tv_overtime_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium_font"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/empty"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/layout_late_time"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/round_shape"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng giờ đi trễ"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/medium_font"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_late_time"
                            app:tint="@color/reject_line"
                            />
                        <TextView
                            android:id="@+id/tv_late_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium_font"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="@string/empty"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_leave"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/round_shape"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buổi nghỉ phép"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/medium_font"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_envelope"
                            app:tint="@color/waiting_line"
                            />

                        <TextView
                            android:id="@+id/tv_leave_requests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium_font"
                            android:text="@string/empty"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/custom_progress_bar"
            android:indeterminateTint="@color/light_purple"
            />
    </RelativeLayout>



</LinearLayout>